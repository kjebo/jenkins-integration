                // Execute build steps here
                sh 'echo "Building the project"'
            }
        }
        
        stage('Test') {
            steps {
                // Execute test steps here
                sh 'echo "Running tests"'
            }
        }
        
        stage('Deploy') {
            steps {
                // Execute deployment steps here
                sh 'echo "Deploying the project"'
            }
        }
    }
}
